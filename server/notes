
after installing docker client:
	docker-compose -h
	cd server/

run all setted up containers in background:
	docker-compose up -d

connect to postgres:
	psql postgresql://localhost:5432/matcha -U postgres

show all containers to get an ID:
	docker ps 

remove container: 
	docker stop <ID>
	docker rm <ID>

todo: install docker && pgAdmin

